
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="login-box">
    <div class="login-logo">
      <a href="/"><b>Resgatar Senha</b></a>
    </div>

    <div class="login-box-body">
      <p class="login-box-msg">Preencha o Formul√°rio</p>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block btn-flat" %>
      </div>

      <%= render "devise/shared/links" %>

    </div>
  </div>

<% end %>
