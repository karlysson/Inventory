<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="login-box">
    <div class="login-logo">
      <a href="/"><b>Cadastre-Se</b></a>
    </div>

    <div class="login-box-body">
      <p class="login-box-msg">Preencha o Formul√°rio</p>

      <div class="form-inputs">
        <%= f.input :name, required: true, autofocus: true, class: "form-control" %>
        <%= f.input :email, required: true, autofocus: true, class: "form-control" %>
        <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: "form-control" %>
        <%= f.input :password_confirmation, required: true, class: "form-control" %>
      </div>


      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-primary btn-block btn-flat" %>
      </div>


      <%= render "devise/shared/links" %>

    </div>
  </div>

<% end %>

