
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="login-box">
    <div class="login-logo">
      <a href="/"><b>Iventory</b>Control</a>
    </div>

    <div class="login-box-body">
      <p class="login-box-msg">Faça login para iniciar sua sessão</p>

      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true, class: "form-control" %>
        <%= f.input :password, required: false, class: "form-control"%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block btn-flat" %>
      </div>

      <%= render "devise/shared/links" %>

    </div>
  </div>

<% end %>



